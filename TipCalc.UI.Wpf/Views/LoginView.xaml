<views:MvxWpfView x:Class="TipCalc.UI.Wpf.Views.LoginView"
                  xmlns:views="clr-namespace:MvvmCross.Wpf.Views;assembly=MvvmCross.Wpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TipCalc.UI.Wpf.Views"
             mc:Ignorable="d" 
              >
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Margin="5" Text="Id "/>
        <TextBox Grid.Column="1" Width="100" Height="20" Text="{Binding Id,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
         <Button Grid.Row="3" Grid.Column="1" 
                Content="Login" HorizontalAlignment="Left"
                Command="{Binding LoginCommand}" Width="100" Height="20"/>
    </Grid>
</views:MvxWpfView>
